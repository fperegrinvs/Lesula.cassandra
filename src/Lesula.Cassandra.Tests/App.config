<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="CassandraConfiguration" type="Lesula.Cassandra.Configuration.CassandraConfigurationSection, Lesula.Cassandra"/>
  </configSections>

  <!-- Cassandra -->
  <CassandraConfiguration>
    <clusters>
      <add friendlyName="Lesula">
        <connection poolType="SIZEDKEYSPACEPOOL" factoryType="FAKE"/>
        <endpointManager type="ROUNDROBIN" defaultTimeout="6000">
          <cassandraEndpoints>
            <add address="localhost" port="9160"/>
          </cassandraEndpoints>
        </endpointManager>
      </add>
      <add friendlyName="CqlLesula" clusterType="CQL">
        <connection poolType="SIZEDKEYSPACEPOOL" factoryType="CQL"/>
        <endpointManager type="ROUNDROBIN" defaultTimeout="6000">
          <cassandraEndpoints>
            <add address="localhost" port="9042"/>
          </cassandraEndpoints>
        </endpointManager>
      </add>
    </clusters>
  </CassandraConfiguration>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/></startup></configuration>
